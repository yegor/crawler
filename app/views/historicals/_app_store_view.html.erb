<div class="meta">
  <div class="row">
    <div class="span4">
      <h3>Title</h3>
    </div>
  
    <div class="span8">
      <blockquote><%= meta_data.name %></blockquote>
    </div>
  </div>

  <div class="row">
    <div class="span4">
      <h3>Publisher</h3>
    </div>
  
    <div class="span8">
      <blockquote><%= meta_data.publisher %></blockquote>
    </div>
  </div>
  
  <div class="row">
    <div class="span4">
      <h3>Version</h3>
    </div>
  
    <div class="span8">
      <blockquote>
        <%= meta_data.version %>
      </blockquote>
    </div>
  </div>
  
  <div class="row">
    <div class="span4">
      <h3>Released at</h3>
    </div>
  
    <div class="span8">
      <blockquote>
        <%= meta_data.game.first_meta_data.release_date %>
      </blockquote>
    </div>
  </div>
  
  <div class="row">
    <div class="span4">
      <h3>Updated at</h3>
    </div>
  
    <div class="span8">
      <blockquote>
        <%= meta_data.release_date %>
      </blockquote>
    </div>
  </div>
  
  <div class="row">
    <div class="span4">
      <%= image_tag meta_data.itunes_artwork_url %>
    </div>
  
    <div class="span8">
      <blockquote>
        <%= meta_data.summary.html_safe %>
      </blockquote>
    </div>
  </div>
  
  <div class="row">
    <div class="span4">
      <h3>Screenshots</h3>
    </div>
  
    <div class="span8">
      <blockquote>
        <% meta_data.screenshots.each do |url| %>
          <%= image_tag(url, :width => 300) if url.ends_with?(".png") %>
        <% end %>
      </blockquote>
    </div>
  </div>
  
  <div class="row">
    <div class="span4">
      <h3>IPA Size</h3>
    </div>
  
    <div class="span8">
      <blockquote>
        <%= meta_data.file_size_bytes %>
      </blockquote>
    </div>
  </div>
</div>