<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Label</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @events.values.sort_by(&:label).each do |e| %>
    <tr>
      <td><%= e.label %></td>
      <td><%= e.description %></td>
    </tr>
    <% end %>
  </tbody>
</table>