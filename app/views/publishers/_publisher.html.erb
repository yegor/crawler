<% @sorted_itunes_id.each do |itunes_id| %>
  <% meta = @meats[ itunes_id ] %>
  
  <div class="accordion">
    <div class="accordion-group">
      <div class="accordion-heading">
        <%= link_to historicals_path(:game_id => itunes_id) do %>
          <%= image_tag meta.first.itunes_artwork_icon_url, :class => "itunes-artwork-icon" %>
        <% end %>
        
        <%= link_to meta.map(&:name).uniq.join(", "), "#pid#{ page_features.object_id }", "data-toggle" => "collapse", "class" => "accordion-toggle" %>
      </div>
      
      <div class="accordion-body <%= "in" if @ranks[itunes_id].present? %>" id="pid<%= meta.object_id %>">
        <div class="accordion-inner">
          <% (@ranks[itunes_id] || []).each do |rank| %>
            <p><%= rank.rank %> in <%= country_shortcuts[rank.country] %> <%= kind_shortcuts[rank.kind] %> <%= rank.genre || "apps" %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
<% end %>